---
import Footer from "../components/Footer.astro";
import PrincipalCard from "../components/Principal_card.astro";
import CarrerasCard from "../components/Carreras_card.astro";
import Header from "../components/Header.astro";
import Slider from "../components/Slider.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <title>Tour</title>

        <meta property="og:type" content="website" />

        <link rel="stylesheet" href="/src/styles/plantilla.css" />
        <link rel="stylesheet" href="/src/styles/footer_udg.css" />

        <!-- Agregar la fuente relacionada a videojuegos -->
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
        />
        <style>
            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
                overflow: hidden;
            } 

            body {
                font-family: "Press Start 2P", cursive; /* Aplicar la fuente de videojuegos */
                /* display: flex; 
                flex-direction: column; */
            }

            @keyframes blink {
                0%,
                100% {
                    opacity: 1;
                }
                50% {
                    opacity: 0;
                }
            }

            .blink {
                animation: blink 2s infinite;
            }

            .hidden {
                display: none;
            }

            .view {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
            }

            .intro-view {
                z-index: 10;
            }

            .main-view {
                z-index: 1;
                overflow-y: auto;
                display: flex;
                position: auto;
                flex-direction: column;
                height: 100%;
            }

            .container {
                flex: 1;
            }
            .opacity-0 {
                opacity: 0;
            }

            .opacity-100 {
                opacity: 1;
            }

            .transition-opacity {
                transition: opacity 2s ease-in-out;
            }
        </style>
    </head>
    <body class="bg-gray-200">
        <div
            id="introView"
            class="view intro-view flex items-center justify-center bg-white opacity-0 transition-opacity"
        >
            <div class="text-center relative">
                <h1 class="text-4xl mb-4">Hola gamer</h1>
                <p class="mb-6">Vamos a conocer mas sobre las carreras<br>de la division DIVTIC de CUCEI</p>
                <button
                    id="startButton"
                    class="text-button text-2xl text-blue-500 p-4 absolute right-0 cursor-pointer blink"
                    >Pulsa aqui para comenzar</button
                >
            </div>
        </div>

        <!-- Vista principal -->
        <div
            id="mainView"
            class="main-view hidden flex flex-col items-center justify-center bg-white opacity-0 transition-opacity"
        >
            <Header />

            <Slider />
            <div
                class="container px-8 py-5 lg:py-8 mx-auto mb-10 xl:px-5 max-w-screen-lg"
            >
                <main>
                    <div class="grid gap-10 lg:gap-10 mb-11 md:grid-cols-2">
                        <!--  -->
                        <PrincipalCard
                            href=""
                            alt="nada"
                            srcset="200w, 800w"
                            subtitulo="prueba"
                            titulo="Calendario"
                            texto="mucho texto"
                            src=""
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-orange-700"
                        />
                        <PrincipalCard
                            href=""
                            alt="nada"
                            srcset="200w, 800w"
                            subtitulo="prueba"
                            titulo="Registro"
                            texto="mucho texto"
                            src=""
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-purple-600"
                        />
                    </div>
                    <div
                        class="grid gap-10 mt-10 lg:gap-10 md:grid-cols-2 xl:grid-cols-3"
                    >
                        <CarrerasCard
                            href="/IngInformatica"
                            alt="Cargaaaa"
                            srcset="/public/img/ventajas-informatica-empresas.jpg 200w, /public/img/ventajas-informatica-empresas.jpg 800w"
                            subtitulo="INFO"
                            titulo="Ingeniería en Informática"
                            texto="mucho texto"
                            src="/public/img/ventajas-informatica-empresas.jpg"
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-emerald-700"
                        />
                        <CarrerasCard
                            href="/IngBiomedica"
                            alt="nada"
                            srcset="/public/img/biomedica.jpg 200w, /public/img/biomedica.jpg 800w"
                            subtitulo="INBI"
                            titulo="Ingeniería en Biomédica"
                            texto="mucho texto"
                            src="/public/img/biomedica.jpg"
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-purple-600"
                        />
                        <CarrerasCard
                            href="/IngComputacion"
                            alt="nada"
                            srcset="200w, 800w"
                            subtitulo="ICOM"
                            titulo="Ingeniería en Computación"
                            texto="mucho texto"
