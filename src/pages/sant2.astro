                        />
                        <CarrerasCard
                            href="/IngComElec"
                            alt="nada"
                            srcset="200w, 800w"
                            subtitulo="prueba"
                            titulo="Ingeniería en Comunicaciones y Electrónica"
                            texto="mucho texto"
                            src=""
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-pink-600"
                        />
                        <CarrerasCard
                            href="/IngFotonica"
                            alt="nada"
                            srcset="200w, 800w"
                            subtitulo="FOTON"
                            titulo="Ingeniería en Fotónica"
                            texto="mucho texto"
                            src=""
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-pink-600"
                        />
                        <CarrerasCard
                            href="/IngRobotica"
                            alt="nada"
                            srcset="200w, 800w"
                            subtitulo="prueba"
                            titulo="Ingeniería en Robótica"
                            texto="mucho texto"
                            src=""
                            autor="Yo"
                            altAutor="yo quien más"
                            imgAutor=""
                            fecha="hoy"
                            colorSub="inline-block mt-5 text-xs font-medium tracking-wider uppercase text-pink-600"
                        />
                    </div>
                </main>
            </div>
            <Footer />
        </div>

    </body>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const introView = document.getElementById("introView");
            const mainView = document.getElementById("mainView");
            const startButton = document.getElementById("startButton");

            // Mostrar la vista de introducción con efecto de desvanecimiento
            setTimeout(() => {
                introView.classList.remove("opacity-0");
                introView.classList.add("opacity-100");
            }, 100);

            // Manejar el clic en el botón de inicio
            startButton.addEventListener("click", () => {
                // Ocultar la vista de introducción
                introView.classList.add("opacity-0");
                introView.classList.remove("opacity-100");
                setTimeout(() => {
                    introView.classList.add("hidden");
                    mainView.classList.remove("hidden");

                    // Cambiar height y overflow después de la transición
                    document.documentElement.style.height = 'auto';
                    document.body.style.height = 'auto';
                    document.documentElement.style.overflow = 'auto';
                    document.body.style.overflow = 'auto';

                    // Mostrar la vista principal con efecto de desvanecimiento
                    setTimeout(() => {
                        mainView.classList.remove("opacity-0");
                        mainView.classList.add("opacity-100");
                    }, 100);
                }, 2000);
            });
        });
    </script>
</html>
